@model IEnumerable<MVCAssignment.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>
@if (!Model.Any())
{
    <tet>We don't have any product</tet>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@Html.ActionLink(item.PName, "Details", "Products", new { id = item.Id }, null)</td>
                <td>@item.PRate</td>

            </tr>
            }
        </tbody>
    </table>
}

