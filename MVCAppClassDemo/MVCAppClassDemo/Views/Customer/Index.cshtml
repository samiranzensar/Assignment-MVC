@model IEnumerable<MVCAppClassDemo.Models.Customer> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Table</h2>

@if(!Model.Any())
{
    <text>Dont have any customer</text>
}
else
{
    <table class="table table-bordered table-hover" >
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cust in Model)
            {
                <tr>
                    <td>@Html.ActionLink(cust.Name, "Details", "Customer",new { id=cust.Id},null)</td></tr>
            }

        </tbody>

    </table>
}
