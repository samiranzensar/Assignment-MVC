@model MovieCustomerMvcAppWithAuthentication.ViewModel.NewCustomerViewModel
@{
    ViewBag.Title = "New";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @*this is advisable that we shoild use TextBoxFor also LabelFor*@
        @Html.LabelFor(m => m.Customer.Name)
        @*@Html.Label("Customer Name")*@

        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.DOB)
        @Html.TextBoxFor(m => m.Customer.DOB, "{0:dd MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), " ", new { @class = "form-control" })
    </div>

    @*<div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter) SubscribedToNewsLetter
            </label>
        </div>*@

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.IsSubscribedToNewsLetter)
        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter)
    </div>
    @*@Html.HiddenFor(m=>m.)*@
    <button type="submit" class="btn btn-primary">Save</button>
    

}