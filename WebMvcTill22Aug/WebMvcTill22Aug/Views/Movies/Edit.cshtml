@model IEnumerable<WebMvcTill22Aug.ViewModel.MovieGenreViewModel>
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit","Movies"))
{
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor()
        @Html.EditorFor(m=>m., new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.MName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Genre")
        @Html.DropDownList("GenreId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}
